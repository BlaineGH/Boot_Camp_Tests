<div>
	<div>
		<%= @idea.user.alias %> <p style="display: inline-block;">says:</p>
		<div class="border">
			<%= @idea.content %>
		</div>
	</div>
	<div>
		<h4>People who liked this post:</h4>
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Alias</th>
					<th scope="col">Name</th>
				</tr>
			</thead>
			<tbody>
				<% @likes.each do |like| %>
				<tr>
					<td><a href="/users/<%= like.user.id %>"><%= like.user.alias %></a></td>
					<td><%= like.user.name %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>